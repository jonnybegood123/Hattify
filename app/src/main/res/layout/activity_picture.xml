<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jonathanrobins.pepepix.PictureActivity">

    <ImageView
        android:id="@+id/picture"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:adjustViewBounds="true"
        android:background="#ff000000"
        android:scaleType="fitXY" />

    <Button
        android:id="@+id/backButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:text="X"
        android:textSize="24dp"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:id="@+id/doneButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:textSize="0dp"
        android:layout_alignBottom="@+id/watermark"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp" />

    <ImageView
        android:id="@+id/save"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/save"
        android:focusable="false"
        android:layout_marginBottom="8dp"
        android:layout_alignBottom="@+id/doneButton"
        android:layout_alignRight="@+id/doneButton"
        android:layout_alignEnd="@+id/doneButton"
        android:layout_marginRight="9dp"
        android:layout_marginEnd="9dp" />

    <ImageView
        android:layout_width="102.85dp"
        android:layout_height="16.5dp"
        android:id="@+id/watermark"
        android:src="@drawable/watermark"
        android:alpha=".20"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/backButton"
        android:layout_alignStart="@+id/backButton" />

</RelativeLayout>
